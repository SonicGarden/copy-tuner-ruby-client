{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "lib": [
      "ESNext",
      "DOM",
      "DOM.Iterable"
    ],
    "moduleResolution": "Node",
    "strict": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "noEmit": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "skipLibCheck": true,
    // NOTE: 以降はlit-element用の設定
    // SEE: https://lit.dev/docs/components/decorators/#decorators-typescript
    "experimentalDecorators": true,
    "useDefineForClassFields": false,
  },
  "include": [
    "client",
    "src",
  ]
}
